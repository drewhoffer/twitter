<% provide(:title, "Log in") %>
<h1>Log In</h1>
<div class="col-md-6 mx-auto col-md-offset-3">
  <div class="row">
    <%= form_with(url: login_path, scope: :session, local: true, data: { turbo: false }) do |f| %>
      <div class="mb-3">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-check mb-3">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me, class: "form-check-input mr-3 p-2" %>
          <%= f.label :remember_me, "Remember me on this computer", class: "form-check-label" %>
        <% end %>
      </div>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
